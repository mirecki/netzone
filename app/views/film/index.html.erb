<!-- start-breadcrumbs
-->
<div class="breadcrumbs">
  <div class="container">
    <div class="breadcrumbs-main">
      <ol class="breadcrumb">
        <li>
          <a href="/">Home</a>
        </li>
        <li>All Films</li>
      </ol>
    </div>
  </div>
</div>
<!-- end-breadcrumbs
-->
<!-- prdt-starts
-->
<div class="prdt">
  <div class="container">
    <div class="prdt-top">
      <div class="col-md-9 prdt-left">
        <% if @films.empty? %>
          <h3>Nothing to show</h3>
        <% else %>
          <%= render 'include/film/films', films: @films %>
          <div class="text-center">
            <%= raw(pagy_bootstrap_nav_js(@pagy)) %>
          </div>
        <% end %>
      </div>
      <div class="col-md-3 prdt-right">
        <%= render 'include/shared/sidebar' %>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
<!-- prdt-ends
-->
