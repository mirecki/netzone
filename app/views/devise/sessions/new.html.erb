<div class="prdt">
  <div class="container">
    <div class="prdt-top">
      <div class="col-md-12">
        <div class="product-one signup">
          <div class="register-top heading">
            <h2>SIGN IN</h2>
          </div>
          <div class="register-main">
            <div class="col-md-6 col-md-offset-3 account-left">
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= f.error_notification %>
                <div class="form-group has-feedback">
                  <%= f.input :email,                                                                   
                    required: false,                                                                    
                    autofocus: true,                                                                    
                    input_html: { autocomplete: "email", class: "form-control", placeholder:  "Email" } 
                  %>
                  <span aria-hidden="true" class="glyphicon form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                  <%= f.input :password,                                                                             
                    required: false,                                                                                  
                    input_html: { autocomplete: "current-password", class: "form-control", placeholder:  "Password" } 
                   %>
                  <span aria-hidden="true" class="glyphicon form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
                <div class="form-group has-feedback">
                  <div class="form-actions">
                    <%= f.button :submit, "Log In", class: "btn btn-default" %>
                  </div>
                </div>
              <% end %>
              <p>
                <%= render "devise/shared/links" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
