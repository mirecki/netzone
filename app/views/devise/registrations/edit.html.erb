<div class="prdt">
  <div class="container">
    <div class="prdt-top">
      <div class="col-md-12">
        <div class="product-one signup">
          <div class="register-top heading">
            <h2>EDIT PROFILE</h2>
          </div>
          <div class="register-main">
            <div class="col-md-6 col-md-offset-3 account-left">
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.error_notification %>
                <div class="form-group has-feedback">
                  <%= f.input :email,                                                                     | %>
                    required: true,                                                                     |
                    autofocus: true,                                                                    |
                    input_html: { autocomplete: "email", class: "form-control", placeholder:  "Email" } |
                  <% end %>
                </div>
                <div class="form-group has-feedback">
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <p>
                      Currently waiting confirmation for: #{resource.unconfirmed_email}
                    </p>
                  <% end %>
                </div>
                <div class="form-group has-feedback">
                  <%= f.input :password,                                                                            | %>
                    required: false,                                                                              |
                    hint: "leave blank if you don't want to change it",                                           |
                    input_html: { autocomplete: "new-password", class: "form-control", placeholder:  "Password" } |
                  <% end %>
                </div>
                <div class="form-group has-feedback">
                  <%= f.input :password_confirmation,                                                                       | %>
                    required: false,                                                                                      |
                    input_html: { autocomplete: "new-password", class: "form-control", placeholder:  "Confirm Password" } |
                  <% end %>
                </div>
                <div class="form-group has-feedback">
                  <%= f.input :current_password,                                                                                | %>
                    required: true,                                                                                           |
                    hint: "we need your current password to confirm your changes",                                            |
                    input_html: { autocomplete: "current-password", class: "form-control", placeholder:  "Current Password" } |
                  <% end %>
                </div>
                <div class="form-actions">
                  <%= f.button :submit, "Update", class: "btn btn-default" %>
                </div>
              <% end %>
              <br/>
              <h4 class="text-muted">Cancel my account</h4>
              <p>
                Unhappy?
                \#{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn text-danger"}
              </p>
              <%= link_to "Back", :back, class: "btn btn-default" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
