<% if notice %>
  <div class="alert alert-success" role="alert">
    <button aria-label="Close" class="close" onclick="this.parentElement.style.display='none'" type="button">
      <span aria-hidden="true"></span>
    </button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-danger" role="alert">
    <button aria-label="Close" class="close" onclick="this.parentElement.style.display='none'" type="button">
      <span aria-hidden="true"></span>
    </button>
    <%= alert %>
  </div>
<% end %>
