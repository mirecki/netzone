<%= simple_form_for :search, url: film_index_path, method: "GET" do |f| %>
  <%= f.input :categories, label: "Category", collection: Category.all.map(&:title), as: :check_boxes %>
  <%= f.input :studios, label: "Studio", collection: Studio.all.map(&:title), as: :check_boxes %>
  <%= f.submit "Search", class: "btn btn-primary" %>
  <%= link_to "Reset", film_index_path %>
<% end %>
